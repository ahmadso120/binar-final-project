<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.account.AccountFragment">

    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Akun Saya"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgCam"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@id/desc1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/fi_camera" />

    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCam"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/fi_edit" />

    <TextView

        android:id="@+id/txt_edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCam"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10dp"
        android:text="Ubah Akun" />

    <ImageView
        android:id="@+id/ic_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_edit"
        android:layout_marginTop="10dp"
        android:src="@drawable/fi_settings" />

    <TextView
        android:id="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_edit_account"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10dp"
        android:text="Pengaturan Akun" />

    <ImageView
        android:id="@+id/ic_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_settings"
        android:layout_marginTop="10dp"
        android:src="@drawable/fi_logout" />

    <TextView
        android:id="@+id/txt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_settings"
        android:layout_marginStart="40sp"
        android:layout_marginTop="20dp"
        android:text="Keluar" />


</RelativeLayout>