<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecondHand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_04</item>
        <item name="colorPrimaryVariant">@color/dark_blue_05</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_01</item>
        <item name="colorSecondaryVariant">@color/dark_blue_03</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorSurface</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ChipTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/selector_tab</item>
        <item name="tabSelectedTextColor">?colorSurface</item>
        <item name="tabTextColor">?colorOnSurface</item>
    </style>

    <style name="Theme.SecondHand.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SecondHand.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SecondHand.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>